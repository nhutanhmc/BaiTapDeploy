<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Error Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="body">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #3688ae">
      <div class="container-fluid">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"> </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/sections">Sections</a>
            </li>
          </ul>
          <% if (user) { %>
          <div class="dropdown mx-4">
            <div class="dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <img
                style="vertical-align: middle; width: 30px; height: 30px; border-radius: 50%"
                src="https://img.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg"
                alt="Avatar"
                class="avatar"
              />&ensp;<%= user?.name %>
            </div>
            <ul class="dropdown-menu" style="top: 120%; left: -30%; font-size: small">
              <li>
                <a class="dropdown-item" href="/user/logout"><i class="bi bi-box-arrow-left">&ensp;</i>Logout</a>
              </li>
            </ul>
          </div>
          <% } else { %>
          <a href="/members/login" class="btn btn-success"> Login</a>
          <% } %>
        </div>
      </div>
    </nav>
    <h1 style="text-align: center; margin-top: 20vh; color: red">This is error page!!!</h1>

    <!-- noti -->
    <div id="noti">
      <% if(success_msg != ''){ %>
      <div class="notification" style="background-color: rgb(58 160 255 / 55%)"><%= success_msg %></div>
      <% } %> <% if(error_msg != ''){ %>
      <div class="notification" style="background-color: rgba(255, 0, 0, 0.555)"><%= error_msg %></div>
      <% } %> <% if(error != ''){ %>
      <div class="notification" style="background-color: rgb(255, 0, 0)"><%= error %></div>
      <% } %>
    </div>
    <!-- noti -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const noti = document.getElementById("noti");
        setTimeout(() => {
          noti.remove();
        }, 3000);
      });

      const showConfirmModal = (event, sectionName) => {
        event.preventDefault();
        var form = event.target;
        var confirmText = document.getElementById("confirmText");
        confirmText.textContent = `Do you want to delete "${sectionName}" ?`;

        var confirmOk = document.getElementById("confirmOk");
        confirmOk.addEventListener("click", function () {
          form.submit();
        });

        var confirmCancel = document.getElementById("confirmCancel");
        confirmCancel.addEventListener("click", function () {
          document.getElementById("confirmModal").style.display = "none";
        });
        var confirmClose = document.getElementById("confirmClose");
        confirmClose.addEventListener("click", function () {
          document.getElementById("confirmModal").style.display = "none";
        });

        document.getElementById("confirmModal").style.display = "block";
      };
    </script>
  </body>
</html>
